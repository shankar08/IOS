<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:context=".ViewerActivity" android:weightSum="100">

    <WebView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/wbv_pdfViewer" android:layout_gravity="center_horizontal" android:layout_weight="93"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="7" android:weightSum="100">
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_navigation1" android:layout_weight="50" android:background="#ff0077ee"
                android:textStyle="bold"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_navigation2" android:layout_weight="50" android:background="#ff0077ee"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>